<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#AAA7AD"/> <!-- Change the color as per your requirement -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <stroke android:width="2dp" android:color="#AAA7AD"></stroke>
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>