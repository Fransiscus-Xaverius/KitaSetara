<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TermsFragment">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="310dp"
        android:text="All Terms"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline48"
        app:layout_constraintTop_toBottomOf="@+id/iv_back_terms" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_terms"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline49"
        app:layout_constraintStart_toStartOf="@id/guideline48"
        app:layout_constraintTop_toBottomOf="@+id/searchview_terms" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchview_terms"
        android:layout_width="0dp"
        android:background="@drawable/search_bg"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        app:queryBackground="@android:color/transparent"
        app:iconifiedByDefault="false"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintEnd_toEndOf="@id/guideline49"
        app:layout_constraintStart_toStartOf="@id/guideline48"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        app:queryHint="Search terms" />

    <ImageView
        android:id="@+id/iv_back_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="371dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline48"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        app:layout_constraintGuide_begin="1dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94"
        app:layout_constraintGuide_begin="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>